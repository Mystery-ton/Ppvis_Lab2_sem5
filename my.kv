<CustLabel@Label>:
    color: .1, .40, .2, 1
<Reg_or_log>
    name: "registration_or_login"
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            color:.800, .300, .500
            cols: 2
            CustLabel:
                color:.20, .25, .80
                text: "Registration"
                size_hint_x: .80
                font_size:30

            CustLabel:
                color:.20, .25, .80
                text: "Login"
                size_hint_x: .80
                font_size:30

            CheckBox:
                color:.20, .25, .80
                on_active: root.checkbox_click(self, self.active)
                on_active: app.root.current = "start"
                size_hint_x: 100

            CheckBox:
                color:.0, .0, .0
                on_active: root.checkbox_click(self, self.active)
                on_active: app.root.current = "login"
                size_hint_x: 100
<Start>
    name: "start"
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            color:.800, .300, .500
            cols: 2
            CustLabel:
                color:.20, .25, .80
                text: "Passenger"
                size_hint_x: .80
                font_size:30

            CustLabel:
                color:.20, .25, .80
                text: "Driver"
                size_hint_x: .80
                font_size:30

            CheckBox:
                color:.20, .25, .80
                on_active: root.checkbox_click(self, self.active)
                on_active: app.root.current = "registration_passanger"
                size_hint_x: 100

            CheckBox:
                color:.0, .0, .0
                on_active: root.checkbox_click(self, self.active)
                on_active: app.root.current = "registration_driver"
                size_hint_x: 100



